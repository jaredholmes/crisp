// Base font size
font-size = 16px

// Font weights
font-weights = {
    light: 300
    regular: 400
    medium: 500
    semibold: 600
    bold: 700
}

// Font weights classes
for name, weight in font-weights
    .fw-{name}
        font-weight weight

body, input
    font-size font-size
    font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif
    font-weight font-weights["light"]

// Heading font sizes
h1
    font-size 2.5rem

h2
    font-size 2rem

h3
    font-size 1.5rem

h4
    font-size 1.25rem

h5
    font-size 1rem

h6
    font-size .75rem

// Heading font weights
h1, h2, h3, h4, h5, h6
    font-weight font-weights["bold"]

// Text align
.text-align-center
    text-align center

.text-align-left
    text-align left

.text-align-right
    text-align right

// Links
a, a:visited, a:active
    text-decoration none
    color inherit

a:hover
    text-decoration underline
