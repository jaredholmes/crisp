spacer = 1.5rem

s-4 = spacer / 4
s-3 = spacer / 3
s-2 = spacer / 2
s1 = spacer
s2 = spacer * 2
s3 = spacer * 3
s4 = spacer * 4
s5 = spacer * 5
s6 = spacer * 6
s7 = spacer * 7

border-width = 1px

main
  margin-bottom s5

// Text
h1, h2, h3, h4, h5, h6
    margin-top s1
    margin-bottom s1

p+ h1
    margin-top s3

p + h2, p + h3, p+ h4, p + h5, p + h6
    margin-top s2

* + p, * + ul
    margin-top s1
